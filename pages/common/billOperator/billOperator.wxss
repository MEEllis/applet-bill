.list-wrap .weui-cell__bd {
  color: #333;
}

.weui-cell::before {
  left: 15px;
}

.txt-input-price {
  height: 70rpx;
  width: 440rpx;
  float: right;
  font-weight: 600;
  font-size: 50rpx;
}

.txt-input {
  border: solid 1rpx #d9d9d9;
  border-radius: 6rpx;
  height: 66rpx;
  width: 424rpx;
  text-align: left;
  float: right;
  padding: 0 0 0 16rpx;
}

.txt-input-remark {
  width: 100%;
  height: 66rpx;
  line-height: 66rpx;
  text-align: left;
}

button {
  border-radius: 0 !important;
  font-size: 36rpx;
  height: 98rpx;
  line-height: 98rpx;
}

button::after, button::before {
  border: none !important;
}

.btn-wrap {
  position: relative;
  border-top: 1rpx solid #e6e6e6;
  margin-top: 2rpx;
}
