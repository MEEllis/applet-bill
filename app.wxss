/*清除浮动代码*/

.clearfix:after {
  display: block;
  clear: both;
  content: "";
  visibility: hidden;
  height: 0;
}

.clearfix {
  zoom: 1;
}

.tl {
  text-align: left;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.container {
  background-color: #efeff4;
}

.ellipsis {
  display: -webkit-box;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.ellipsis2 {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.sel-time {
  position: relative;
  font-size: 26rpx;
  padding-left: 30rpx;
  color: #8c8c8c;
  line-height: 70rpx;
  height: 70rpx;
}

.border-bottom, .border-top {
  position: relative;
}

.border-bottom::before, .border-top::before {
  content: " ";
  position: absolute;
  right: 0;
  left: 0;
  height: 1px;
  border-top: 1rpx solid #e6e6e6;
}

.border-top::before {
  top: 0;
}

.border-bottom::before {
  bottom: 0;
}

.btnBlue {
  background-color: rgba(71, 110, 201, 1) !important;
  color: #fff !important;
}

.btnBlue[disabled] {
  background-color: rgba(71, 110, 201, 0.5) !important;
}

.modal-content picker {
  display: inline-block;
  border-bottom: 1rpx solid #e6e6e6;
  padding: 20rpx 30rpx;
  margin: 30rpx 0;
}

.isIPX {
  padding-bottom: 68rpx;
}

.modal-content picker:hover {
  border-bottom: 1rpx solid #ffaf23;
}

.placeholder {
  color: #ccc;
}

.icon-toast {
  color: #10d0b3;
}

.icon-xiangzuo, .icon-shangyige {
  line-height: 1;
  font-size: 36rpx;
}

