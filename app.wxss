  background-color: #fff !important;
  color: #333;
}

button.cancle:active {
  background-color: rgba(250, 250, 252, 0.8) !important;
  color: #333;
}

.cover_layer {
  width: 100%;
  height: 100%;
  top: 0%;
  left: 0%;
  position: fixed;
  z-index: 1001;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
}

.cover_layer .cover_con{
  position: relative;
  text-align: center;
  font-size: 32rpx;
  padding-top: 20vh;
}

.ui-checkbox checkbox,
.ui-checkbox checkbox .wx-checkbox-input {
  width: 32rpx;
  height: 32rpx;
  position: relative;
  top:-2rpx;
}

/*checkbox选中后样式  */
.ui-checkbox checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #fff;
}
/*checkbox选中后图标样式  */
.ui-checkbox checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  text-align: center;
  font-size: 22rpx;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}


@-webkit-keyframes fadeIn {
  from {
    opacity: 0;
  }
}

@-webkit-keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}
